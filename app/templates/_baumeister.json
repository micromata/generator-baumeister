{
  "useHandlebars": <%= templateProps.projectType === 'staticSite' %>,
  "purifyCSS": {
    "usePurifyCSS": false,
    "whitelist": [
      "*navbar*",
      "*modal*",
      "*dropdown*",
      "*carousel*",
      "*tooltip*",
      "open",
      "fade",
      "collapse",
      "collapsing",
      "in"
    ]
  },
  "generateBanners": <%= templateProps.banners === true %>,
  "cacheBusting": true,
  "vendor": {
    "bundleCSS": [],
    "includeStaticFiles": []
  },
  "webpack": {
    "DefinePlugin": {
      "development": {
        "PRODUCTION": false
      },
      "production": {
        "PRODUCTION": true
      }
    },
    "ProvidePlugin": {
      "$": "jquery",
      "jQuery": "jquery"
    }
  }
}
