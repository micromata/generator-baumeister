{
  "useHandlebars": <%= templateProps.projectType === 'A static website (Static site generator using Handlebars and Frontmatters)' %>,
  "generateBanners": <%= templateProps.banners === true %>,
  "bundleCSS": [],
  "bundleExternalJS": [
    "jquery",
    "bootstrap-sass"
  ],
  "includeStaticFiles": [
    "bootstrap-sass/assets/fonts/**/*"
  ],
  "webpack": {
    "DefinePlugin": {
      "dev": {},
      "prod": {
        "process.env": {
          "NODE_ENV": "'production'"
        }
      }
    },
    "ProvidePlugin": {
      "$": "jquery",
      "jQuery": "jquery"
    }
  }
}
